@page "/journal/delete/{id:int}"

<PageTitle>Delete Journal Entry</PageTitle>

<div class="container mt-4">
    <h3 class="text-danger">Delete Journal Entry</h3>

    <p>Are you sure you want to delete this journal entry?</p>

    <div class="mt-3">
        <button class="btn btn-danger me-2" @onclick="DeleteEntry">Delete</button>
        <button class="btn btn-secondary" @onclick="Cancel">Cancel</button>
    </div>
</div>

@code {
    [Parameter] public int Id { get; set; }

    private void DeleteEntry()
    {
        // Logic to delete the journal entry
        Console.WriteLine($"Journal Entry Deleted: {Id}");
    }

    private void Cancel()
    {
        // Logic to navigate back or cancel
        Console.WriteLine("Delete Cancelled");
    }
}