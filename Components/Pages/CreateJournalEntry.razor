@page "/journal/create"

<PageTitle>Create Journal Entry</PageTitle>

<div class="container mt-4">
    <h3 class="text-primary">Create Journal Entry</h3>

    <EditForm Model="@newEntry" OnValidSubmit="HandleValidSubmit" class="mt-3">
        <DataAnnotationsValidator />
        <ValidationSummary class="text-danger" />

        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <InputText id="title" @bind-Value="newEntry.Title" class="form-control" />
        </div>

        <div class="mb-3">
            <label for="content" class="form-label">Content</label>
            <InputTextArea id="content" @bind-Value="newEntry.Content" class="form-control" rows="5" />
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
    </EditForm>
</div>

@code {
    private JournalEntry newEntry = new();

    private void HandleValidSubmit()
    {
        // Logic to save the new journal entry
        Console.WriteLine($"Journal Entry Created: {newEntry.Title}");
    }

    private class JournalEntry
    {
        public string Title { get; set; } = string.Empty;
        public string Content { get; set; } = string.Empty;
    }
}