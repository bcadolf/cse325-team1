@page "/journal/edit/{id:int}"

<PageTitle>Edit Journal Entry</PageTitle>

<div class="container mt-4">
    <h3 class="text-primary">Edit Journal Entry</h3>

    @if (entry == null)
    {
        <p class="text-muted"><em>Loading...</em></p>
    }
    else
    {
        <EditForm Model="@entry" OnValidSubmit="HandleValidSubmit" class="mt-3">
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" />

            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <InputText id="title" @bind-Value="entry.Title" class="form-control" />
            </div>

            <div class="mb-3">
                <label for="content" class="form-label">Content</label>
                <InputTextArea id="content" @bind-Value="entry.Content" class="form-control" rows="5" />
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
        </EditForm>
    }
</div>

@code {
    [Parameter] public int Id { get; set; }
    private JournalEntry? entry;

    protected override async Task OnInitializedAsync()
    {
        // Fetch the journal entry by Id (mocked for now)
        entry = new JournalEntry { Title = "Sample Title", Content = "Sample Content" };
    }

    private void HandleValidSubmit()
    {
        // Logic to update the journal entry
        Console.WriteLine($"Journal Entry Updated: {entry?.Title}");
    }

    private class JournalEntry
    {
        public string Title { get; set; } = string.Empty;
        public string Content { get; set; } = string.Empty;
    }
}